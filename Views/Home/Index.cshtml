@model IEnumerable<Demb.Models.Contacts>

@{
    ViewBag.Title = "Home";
}
<h1>Index</h1>


<p>
    <a href="/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        @foreach (var contact in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contact.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.PhoneNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Email)
                </td>
                <td>
                    <a asp-controller="Home"  asp-action="EditContact" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-controller="Home" asp-action="GetContact" asp-route-id="@contact.Id">Details</a> |
                    <a asp-controller="Home" asp-action="DeleteContact" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>